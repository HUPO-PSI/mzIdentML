<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/3.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/3.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>${assembly.output.folder}</outputDirectory>
        </fileSet>
  		<fileSet>
            <directory>src/main/resources</directory>
            <includes>
                <include>miape-msi-rules.1.1.0.xml</include>
                <include>miape-msi-rules.1.2.0.xml</include>
                <include>mzIdentML-mapping_1.1.0.xml</include>
                <include>mzIdentML-mapping_1.2.0.xml</include>
                <include>ObjectRules.1.1.0.xml</include>
                <include>ObjectRules.1.2.0.xml</include>
                <include>ObjectRulesMIAPE.1.1.0.xml</include>
                <include>ObjectRulesMIAPE.1.2.0.xml</include>
                <include>ontologies.xml</include>
                <include>ontologies_local.xml</include>
                <include>ruleFilter_MIAPEMSI.xml</include>
				<include>ruleFilter_semantic.xml</include>
            </includes>
            <outputDirectory>${assembly.output.folder}</outputDirectory>
        </fileSet>
        <fileSet>
        	<directory></directory>
            <includes>
                <include>mzIdentML Validator Tutorial_final.docx</include>
                <include>Changes on the semantic validation from 1.1 to 1.2.docx</include>
            </includes>
            <outputDirectory>${assembly.output.folder}</outputDirectory>
        </fileSet>
        <fileSet>
        	<directory></directory>
            <includes>
                <include>README.txt</include>
            </includes>
            <outputDirectory>${assembly.output.folder}</outputDirectory>
        </fileSet>
        <fileSet>
        	<directory></directory>
            <includes>
                <include>run.*</include>
            </includes>
            <outputDirectory>${assembly.output.folder}</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>${assembly.output.folder}/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>